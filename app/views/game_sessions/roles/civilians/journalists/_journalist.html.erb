<div class="form-card">
  <%= form.collection_radio_buttons :target_id, assassin.game_session.players, :id, :name do |radio_button| %>
    <div class="input-container">
      <%= radio_button.radio_button class: "checkbox-hidden" %>
      <div class="input-checkbox">
        <%= radio_button.label class: "player-name" %>
      </div>
    </div>
  <% end %>
</div>

<%= form.collection_radio_buttons :guess, array_to_guess, :role, :icon do |radio_button| %>
  <div class="input-container">
    <%= radio_button.radio_button %>
    <div class="input-checkbox">
      <%= radio_button.label %>
    </div>
  </div>
<% end %>

<%= button_tag "Make Action", type: "submit", class: "button-secondary" %>
