<div class="timer-container"
     data-controller="timer"
     data-timer-duration-value="<%= duration %>"
     data-action="<%= data_action %>">

  <div class="timer" data-action="click->timer#toggleStatus">
    <div class="timer-circle">
      <svg class="progress-ring-svg" width="100" height="100" viewBox="0 0 100 100">
        <circle class="progress-ring-bg" cx="50" cy="50" r="45"></circle>
        <circle class="progress-ring" cx="50" cy="50" r="45" data-timer-target="progressRing"></circle>
      </svg>
      <div class="timer-content" data-timer-target="content">
        <%= render "icons/play" %>

        <span class="hidden" data-timer-target="timer"></span>
      </div>
    </div>
  </div>

  <%= stop_button %>
</div>